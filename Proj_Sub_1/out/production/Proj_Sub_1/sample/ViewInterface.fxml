<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="235.0" prefWidth="258.0" spacing="16.0">
         <children>
            <Label fx:id="lblSaida" text="Saida" />
            <TextField fx:id="txtEntrada" promptText="Informe um usuario" />
            <Button fx:id="btnBotao1" mnemonicParsing="false" onAction="#exibirNome" text="OK" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="24.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="16.0">
                     <children>
                        <TextField fx:id="txtNumero1" />
                        <TextField fx:id="txtNumero2" />
                        <Label fx:id="lblResultado" text="Resultado: " />
                     </children>
                     <padding>
                        <Insets bottom="8.0" top="8.0" />
                     </padding>
                  </VBox>
                  <Button fx:id="bntSomar" mnemonicParsing="false" onAction="#somar" text="Somar">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <padding>
                  <Insets top="16.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
      <VBox layoutX="331.0" layoutY="14.0" prefHeight="328.0" prefWidth="230.0" spacing="8.0">
         <children>
            <Label text="Cadastro" />
            <TextField fx:id="txtNome" promptText="Nome:" />
            <TextField fx:id="txtSenha" promptText="Senha:" />
            <TextField fx:id="txtURL" promptText="URL Foto" />
            <Button mnemonicParsing="false" onAction="#previewPhoto" text="Preview Foto" />
            <ImageView fx:id="imgFoto" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Button mnemonicParsing="false" onAction="#cadastrar" text="Cadastrar" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </children>
</AnchorPane>
